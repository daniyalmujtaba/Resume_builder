{
  "name": "resume-builder",
  "version": "1.0.0",
  "description": "Building resume using clicks",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start:dev": "nodemon",
    "build": "rimraf ./build && tsc",
    "tsc": "tsc",
    "rimraf": "./node_modules/rimraf/bin.js",
    "start": "npm run build && node --max-old-space-size=4096 --experimental-modules --es-module-specifier-resolution=node build/index.js",
    "lint": "eslint . --ext .ts",
    "test": "jest --watch"
  },
  "engines": {
    "node": "16.3.2",
    "npm":"8.1.2"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "author": "Daniyal Mujtaba",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "firebase-admin": "^10.0.2",
    "helmet": "^5.0.2",
    "mongoose": "^6.2.9",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    
    "cjs-loader": "^0.1.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.1",
    "supertest": "^6.2.2",
    "typescript": "^4.6.3",
    "@types/jest": "^27.4.1"

  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0"
  }
}
